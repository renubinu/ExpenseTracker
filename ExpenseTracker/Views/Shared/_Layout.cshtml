<!DOCTYPE html>
<html ng-app="ExpenseTrackerapp">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @*@Scripts.Render("~/bundles/angularJS")*@


</head>
<body>
    
        <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: #4d94af ">
            <div class="container" style="color: white">

                <div class="navbar-header" style="text-decoration-color:white">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("ExpenseTracker", "Index", "ETHome", null, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse" style="text-decoration-color:white">
                    <ul class="nav navbar-nav">
                        @*<li>@Html.ActionLink("User", "Index", "User")</li>*@
                        <li><a id="User" href="#/User">User</a></li>
                        @*<li>@Html.ActionLink("Shop ", "Index", "Shop")</li>*@
                        <li><a id="Shop" href="#/Shop">Shop</a></li>

                        <li>@Html.ActionLink("TrackExpense ", "Index", "Expense")</li>


                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <div class="navbar navbar-fixed-bottom">
                <footer>
                    <p>&copy; @DateTime.Now.Year - Expense Tracker</p>
                </footer>
            </div>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")


        @RenderSection("scripts", required: false)


</body>
</html>
